{# templates/note/head.html.twig #}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Notes App{% endblock %}</title>

    {# Automatically include CSS using Webpack Encore #}
    {% block stylesheets %}
        <link rel="icon" type="image/png" href="{{ asset('assets/img/work-note.png') }}">
        {{ encore_entry_link_tags('app') }}  {# This will link to the versioned CSS file generated by Webpack #}
    {% endblock %}

    {# Automatically include JavaScript using Webpack Encore #}
    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}  {# This will link to the versioned JS file generated by Webpack #}
    {% endblock %}
</head>
